<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>tools</id>

    <formats>
        <format>zip</format>
    </formats>

    <!-- Deaktiviert das standardmäßige Basisverzeichnis mit Versionsnummer -->
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/dist/OZTools</directory>
            <outputDirectory>/OZTools</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
